<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo1.AddProductController" prefHeight="400.0" prefWidth="600.0">
    <Label text="Название продукта:" />
    <TextField fx:id="productNameField" promptText="Введите название продукта" />

    <Label text="Дата продукта:" />
    <TextArea fx:id="productDescriptionField" promptText="Введите дату продукта" />

    <Button onAction="#handleUploadImage" text="Загрузить изображение" />
    <ImageView fx:id="productImageView" fitHeight="150" fitWidth="200" preserveRatio="true" />

    <Button onAction="#handleSaveProduct" text="Сохранить продукт" />
    <Button onAction="#backPage" text="Назад" />
</VBox>
